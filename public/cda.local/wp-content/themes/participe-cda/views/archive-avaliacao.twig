{% extends "base.twig" %}

{% block content %}

{% include '_bg-mosaic.twig' %}

<div class="steps voting content-row">
    <div class="content-cell">
        <div class="steps_wrapper">
            <div class="step_content"></div>
            <div class="emot">
                <div>
                    <a href="javascript://" class="happy"></a>
                    <a href="javascript://" class="neutral"></a>
                    <a href="javascript://" class="unhappy"></a>
                </div>
            </div>
            <div class="footer">
                <a class="prev" href="javascript://" style="display: none;">Anterior</a>
                <div class="counter"></div>
                <a class="next" href="javascript://">Pular esta pergunta</a>
                <a class="finish" href="javascript://" style="display: none;">Ver resultado</a>

            </div>
        </div>
    </div>
</div>

<div class="steps_content" style="display: none;">
	{% set i = 1 %}
	{% for post in posts %}
	<div class="step{{i}}">
		<h2>Como vocÃª avalia o(a) {{nome_projeto}} hoje?</h2>
        <h3 class="tags">#{{post.terms('tags').0}}</h3>
		<h3>{{post.title}}</h3>
		<div>{{post.content}}</div>
		{% set i = i + 1 %}
	</div>
	{% endfor %}
</div>
{% endblock %}